pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "kondepatisivanichowdary/k8s"
        GIT_REPO_NAME = "REALTIMEPROJECT"
        GIT_USER_NAME = "kondepatisivanichowdary"
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'Checking out source code'
                git branch: 'main',
                    url: 'https://github.com/kondepatisivanichowdary/REALTIMEPROJECT.git'
            }
        }

        stage('Build Application') {
            steps {
                echo 'Building application using Maven'
                sh '''
                    cd Application
                    mvn clean package -B
                '''
            }
        }

       stage('SonarQube Analysis') {
    steps {
        withCredentials([string(credentialsId: 'sonar-token', variable: 'SONAR_TOKEN')]) {
            sh '''
                cd Application
                mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.1.2184:sonar \
                  -Dsonar.host.url=http://13.222.102.97:9000 \
                  -Dsonar.login=$SONAR_TOKEN
            '''
        }
    }
}


        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image'
                sh '''
                    cd Application
                    docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} .
                '''
            }
        }

        stage('Docker Image Scan') {
            steps {
                echo 'Scanning Docker image using Trivy'
                sh '''
                    trivy image ${DOCKER_IMAGE}:${BUILD_NUMBER}
                '''
            }
        }

        stage('Push Docker Image') {
            steps {
                echo 'Pushing image to DockerHub'
                withCredentials([string(credentialsId: 'dockerhub', variable: 'DOCKER_PASSWORD')]) {
                    sh '''
                        echo "$DOCKER_PASSWORD" | docker login -u kondepatisivanichowdary --password-stdin
                        docker push ${DOCKER_IMAGE}:${BUILD_NUMBER}
                    '''
                }
            }
        }

        stage('Update K8s Manifest') {
            steps {
                echo 'Updating Kubernetes deployment manifest'
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        git config user.email "kondepatisivanichowdary@gmail.com"
                        git config user.name "kondepatisivanichowdary"

                        sed -i "s|image:.*|image: ${DOCKER_IMAGE}:${BUILD_NUMBER}|g" Ansible/k8s_deployment.yaml

                        git add Ansible/k8s_deployment.yaml
                        git commit -m "Update image tag to ${BUILD_NUMBER}"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes using Ansible') {
            steps {
                echo 'Deploying application to Kubernetes cluster'
                ansiblePlaybook(
                    credentialsId: 'ssh',
                    disableHostKeyChecking: true,
                    installation: 'ansible',
                    inventory: '/etc/ansible/inventory',
                    playbook: 'Ansible/ansible_k8s_deploy_playbook.yaml'
                )
            }
        }
    }

    post {
        success {
            echo 'CI/CD Pipeline executed successfully üöÄ'
        }
        failure {
            echo 'CI/CD Pipeline failed ‚ùå'
        }
    }
}
